extends layout

block content
    h1= title
    ul
        each title in titles
            li
                -if (title.isDirectory())
                    a(href=(title.name+'/')) #{title.name}
                -else
                    a(href=title.name) #{title.name}


block footer
    a(href='#' onclick='signout()') Sign out
    script.
        function signout() {
            document.cookie = "loggedin= ; expires = Thu, 01 Jan 1970 00:00:00 GMT";
            window.location.href = '/';
        }